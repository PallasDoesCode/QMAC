<Window x:Class="QMAC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="Window"
        Title="QMAC" Width="554.779" ResizeMode="CanMinimize" Height="514" Icon="logo.ico" DataContext="{Binding Main, Mode=OneWay, Source={StaticResource Locator}}" >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibilityConverter" />
    </Window.Resources>
    <Grid Background="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}" RenderTransformOrigin="0.593,0.948" Margin="0,0,0,1">
        <TextBlock x:Name="tbk_Address" HorizontalAlignment="Left" Margin="25,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Text="{Binding Address}" Height="21" Width="97"/>
        
        <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" Margin="316,61,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="usernameTextbox" Text="{Binding Username}" HorizontalAlignment="Left" Height="31" Margin="316,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" FontSize="16"/>
        
        <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" Margin="316,138,0,0" VerticalAlignment="Top" FontSize="16"/>
        <PasswordBox x:Name="passwordTextbox" HorizontalAlignment="Left" Height="31" Margin="316,169,0,0" VerticalAlignment="Top" Width="208" FontSize="16"/>
        
        <ListBox x:Name="schoolListBox" HorizontalAlignment="Left" Margin="25,61,0,0" Width="274" FontSize="16" SelectionMode="Extended" ItemsSource="{Binding LocationList}" SelectedItem="{Binding LocationsPicked}" VerticalAlignment="Top" Height="364" />
        <Button x:Name="exportBtn" Content="Export" Margin="442,0,25,60" FontSize="16" RenderTransformOrigin="0.587,1.32" Height="29" VerticalAlignment="Bottom" Command="{Binding ExportCommand}" CommandParameter="{Binding ElementName=Window}" />
        
        <TextBlock x:Name="tbk_AlertMessage" HorizontalAlignment="Left" Margin="25,0,0,25" TextWrapping="Wrap" Foreground="Red" FontWeight="Bold" VerticalAlignment="Bottom" FontSize="16" Text="Success! Your MAC address(es) were successfully exported!" Height="21" Width="445" Visibility="{Binding MessageVisibility, Converter={StaticResource VisibilityConverter}}"/>

    </Grid>
</Window>
